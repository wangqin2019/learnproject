body {
	width: 100%;
	overflow-x: hidden;
	margin: 0;
	padding: 0;
	/*background: url(image/bg.jpg) center no-repeat;
	background-size: cover;*/
}
.bg_img{position: fixed;top: 0;left: 0;width: 100%;height: 100%;z-index: -1;}

.hide{display: none;}
.tishi {
	position: fixed;
	background: #000000;
	opacity: 0.6;
	color: #FFFFFF;
	left: 20%;
	width: 60%;
	bottom: 2em;
	line-height: 2em;
	border-radius: 0.2em;
	text-align: center;
}
.button_bg{
	background: -webkit-linear-gradient(#F2D5B6, #CCAF69);
	background: -o-linear-gradient(#F2D5B6, #CCAF69);
	background: -moz-linear-gradient(#F2D5B6, #CCAF69);
	background: linear-gradient(#F2D5B6, #CCAF69);
}
.mask{position: fixed;top:0;left:0;width: 100%;height: 100%;background: #000000;opacity: 0.6;z-index: 999;}
button{margin-bottom: 1em;}
