.bg {
	width: auto;
	height: auto;
	position: absolute;
	left: 0;
	top: 0;
	z-index: -1;
}

.logo {
	width: 203px;
	height: 35px;
	position: absolute;
	left: 140px;
	top: 26px;
}

.text {
	width: 945px;
	height: 332px;
	position: absolute;
	left: 50%;
	margin-left: -472.5px;
	top: 50%;
	margin-top: -166px;
}

.mouse {
	width: 27px;
	height: 45px;
	position: absolute;
	left: 50%;
	margin-left: -13.5px;
	bottom: 45px;
}

.title {
	position: absolute;
	top: 0;
	right: 140px;
	margin-top: 26px;
	z-index: 999;
	display: block;
}

.title li{
	float: left;
	width: 125px;
	height: 40px;
	text-align: center;
	line-height: 40px;
}

.title li a{
	color: #fff;
	padding-bottom: 5px;
}

.title .current{
	border-bottom: 2px solid #fff;
}

.title .button,.title .button_shanghu {
	margin-left: 15px;
	cursor: pointer;
	background: #EB064D;
	color: #FFFFFF;
	width: 125px;
	height: 40px;
	border-radius: 20px;
	line-height: 40px;
	border: none;
	font-size: 16px;
}

.code {
	position: absolute;
	top: 75px;
	right: 260px;
	display: none;
	z-index: 999;
}
.code_shanghu {
	position: absolute;
	top: 90px;
	right: 120px;
	display: none;
	z-index: 999;
	background: #FFFFFF;
}
.code_shanghu img{
	width: 160px;
	margin-top: -15px;
}
.code_shanghu p{
	margin-top: -15px;
	text-align: center;
	height: 25px;
	line-height: 25px;
}
.code_by_stages {
	position: absolute;
	top: 90px;
	right: 410px;
	display: none;
	z-index: 999;
	background: #FFFFFF;
	text-align: center;
	padding: 10px;
}
.code_by_stages::before{
	content:"";
	position:absolute;
	top:-10px;
	left:50px;
	border-bottom:10px solid #FFFFFF;
	border-left:10px solid transparent;
	border-right:10px solid transparent;
}

.code_by_stages div{
	padding: 10px;
	display: inline-block;
}
.code_by_stages img{
	width: 120px;
}
.code_by_stages p{
	text-align: center;
	height: 40px;
	line-height: 40px;
	color: #666666;
}
.header{
	width: 100%;
	height: 100px;
	background: #2e2524;
}

.header_neir{
	width: 1200px;
	height: 100px;
	margin: 0 auto;
	position: relative;
}

.header_neir .header_logo{
	width: 203px;
	height: 35px;
	display: block;
	float: left;
	position: absolute;
	left: 0;
	top: 50%;
	margin-top: -17.5px;
}

.header_neir .title{
	position: absolute;
	right: 0;
	top: 50%;
	margin-top: -20px;
}

.header_neir .code{
	right: -20px;
}
