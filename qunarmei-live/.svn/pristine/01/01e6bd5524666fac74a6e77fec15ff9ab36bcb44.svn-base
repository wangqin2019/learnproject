* {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
	list-style: none;
	outline: none;
}
body{
	background: #303132;
	min-width: 1200px;
}

.header {
	width: 100%;
	overflow: hidden;
	padding: 20px 40px;
	background: #d80e39;
	position: relative;
}

.header img {
	width: 160px;
	height: 62px;
	display: block;
	float: left;
}

.header button {
	width: 96px;
	height: 30px;
	border: none;
	border-radius: 2em;
	background: #fff;
	color: #d80e39;
	text-align: center;
	line-height: 30px;
	position: absolute;
	right: 40px;
	top: 50%;
	margin-top: -15px;
}

.touxiang {
	width: 100%;
	position: absolute;
	left: 5%;
	top: 5%;
	overflow: hidden;
	z-index: 10;
}

.touxiang_img {
	width: 5%;
	float: left;
	border-radius: 50%;
	margin-right: 20px;
	margin-top: 10px;
}
@media only screen and (max-width:1400px ) {
	.touxiang_img{width: 7.5%;}
}

.loction {
	float: left;
	overflow: hidden;
	margin-top: 0.5em;
}

.loction i,.loction div {
	color: #FFFFFF;
	overflow: hidden;
	position: relative;
}

.loction i {
	font-size: 18px;
	font-style:normal
}

.loction div i {
	font-size: 14px;
	float: left;
	font-style:normal
}

.loction div img {
	width: 9%;
	height: auto !important;
	float: left;
	margin-right: 5px;
	margin-top: 2px;
}

.zhibo_p{
	width: 100%;
	text-align: center;
	font-size: 2em;
	color: #fff;
	position: absolute;
	left: 0;
	top: 50%;
	font-style:normal;
	margin-top: -30px;
	z-index: 10;
}
@media only screen and (max-width:1400px ) {
	.zhibo_p{font-size: 1.5em;}
}

.zhibo_p2{
	width: 100%;
	text-align: center;
	font-size: 20px;
	color: #fff;
	position: absolute;
	left: 0;
	top: 55%;
	font-style:normal;
	z-index: 10;
	
}

.renshu{
	width: 50%;
	position: absolute;
	left: 5%;
	bottom: 5%;
	overflow: hidden;
	z-index: 10;
}

.renshu i,.renshu img{
	float: left;
	color: #fff;
	font-style:normal;
}

.main_banner .renshu img{
	width: 22px;
	height: 22px;
	display: block;
    margin: 1px 5px 0 0;
}



.btn_zhibo{
	padding: 0.3em 1.2em 0.5em 0.5em;
	background: #da0f3b;
	border-radius: 2em;
	position: absolute;
	right: 5%;
	bottom: 5%;
	z-index: 10;
}
@media only screen and (max-width:1400px ) {
	.btn_zhibo{padding: 0.2em 1em 0.3em 0.2em;}
}


.yuandian{
	width: 8px;
	height: 8px;
	border-radius: 50%;
	background: #fff;
	float: left;
	margin: 7px 8px 0 13px;
}

.zhiboz{
	font-style:normal;
	color: #fff;
}

.main_banner_box{
	width: 100%;
	overflow: hidden;
	margin-top: 2em;
}

.main_banner_box li{
	float: left;
	position: relative;
	width: 45%;
	margin-bottom: 2em;
	margin-left: 3%;
}

.main_banner_box li .li_img{
	width: 100%;
	display: block;
	margin: 0 auto;
}

.mengban{
	width: 100%;
	height: 100%;
	position: absolute;
	left: 0;
	top: 0;
	background: rgba(0,0,0,0.3);
	z-index: 5;
}
